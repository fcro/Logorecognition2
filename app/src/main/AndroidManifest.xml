<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.telecomlille.cottoncrosnier.logorecognition2">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.telecom.cottoncrosnier.logorecognition2.Activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.telecom.cottoncrosnier.logorecognition2.Activity.TakePhotoActivity" />
        <activity android:name="com.telecom.cottoncrosnier.logorecognition2.Activity.LaunchBrowserActivity"/>


        <service
            android:name="com.telecom.cottoncrosnier.logorecognition2.Classifier"
            android:exported="false"></service>

    </application>

</manifest>